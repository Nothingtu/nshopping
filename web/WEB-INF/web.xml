<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>commodity</servlet-name>
        <servlet-class>controller.CommodityController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>commodity</servlet-name>
        <url-pattern>/selectCommodity</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>shoppingCar</servlet-name>
        <servlet-class>controller.ShoppingCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>shoppingCar</servlet-name>
        <url-pattern>/shoppingCar</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TypeController</servlet-name>
        <servlet-class>controller.TypeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TypeController</servlet-name>
        <url-pattern>/TypeController</url-pattern>
    </servlet-mapping>
</web-app>